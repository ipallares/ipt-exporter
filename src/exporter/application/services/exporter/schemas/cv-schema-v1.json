{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "cv-input-v1",
    "type": "object",
    "title": "Schema to validate inputs for CVs",
    "required": [
        "personalDetails",
        "coverLetter",
        "workExperiences",
        "academicExperiences"
    ],
    "properties": {
        "personalDetails": {
            "$id": "#/properties/personalDetails",
            "type": "object",
            "required": [
                "name",
                "surname",
                "email",
                "phoneNumber"
            ],
            "properties": {
                "name": {
                    "$id": "#/properties/personalDetails/properties/name",
                    "type": "string"
                },
                "surname": {
                    "$id": "#/properties/personalDetails/properties/surname",
                    "type": "string"
                },
                "email": {
                    "$id": "#/properties/personalDetails/properties/email",
                    "type": "string"
                },
                "phoneNumber": {
                    "$id": "#/properties/personalDetails/properties/phoneNumber",
                    "type": "string"
                }
            },
            "additionalProperties": true
        },
        "coverLetter": {
            "$id": "#/properties/coverLetter",
            "type": "object",
            "required": [
                "text"
            ],
            "properties": {
                "text": {
                    "$id": "#/properties/coverLetter/properties/text",
                    "type": "string"
                }
            },
            "additionalProperties": true
        },
        "workExperiences": {
            "$id": "#/properties/workExperiences",
            "type": "array",
            "additionalItems": true,
            "items": {
                "$id": "#/properties/workExperiences/items",
                "anyOf": [
                    {
                        "$id": "#/properties/workExperiences/items/anyOf/0",
                        "type": "object",
                        "required": [
                            "workExperience"
                        ],
                        "properties": {
                            "workExperience": {
                                "$id": "#/properties/workExperiences/items/anyOf/0/properties/workExperience",
                                "type": "object",
                                "required": [
                                    "companyName",
                                    "position",
                                    "startDate",
                                    "endDate",
                                    "description"
                                ],
                                "properties": {
                                    "companyName": {
                                        "$id": "#/properties/workExperiences/items/anyOf/0/properties/workExperience/properties/companyName",
                                        "type": "string"
                                    },
                                    "position": {
                                        "$id": "#/properties/workExperiences/items/anyOf/0/properties/workExperience/properties/position",
                                        "type": "string"
                                    },
                                    "startDate": {
                                        "$id": "#/properties/workExperiences/items/anyOf/0/properties/workExperience/properties/startDate",
                                        "type": "string",
                                        "format": "date"

                                    },
                                    "endDate": {
                                        "$id": "#/properties/workExperiences/items/anyOf/0/properties/workExperience/properties/endDate",
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "description": {
                                        "$id": "#/properties/workExperiences/items/anyOf/0/properties/workExperience/properties/description",
                                        "type": "string"
                                    }
                                },
                                "additionalProperties": true
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "academicExperiences": {
            "$id": "#/properties/academicExperiences",
            "type": "array",
            "additionalItems": true,
            "items": {
                "$id": "#/properties/academicExperiences/items",
                "anyOf": [
                    {
                        "$id": "#/properties/academicExperiences/items/anyOf/0",
                        "type": "object",
                        "required": [
                            "academicExperience"
                        ],
                        "properties": {
                            "academicExperience": {
                                "$id": "#/properties/academicExperiences/items/anyOf/0/properties/academicExperience",
                                "type": "object",
                                "required": [
                                    "schoolName",
                                    "title",
                                    "startDate",
                                    "endDate",
                                    "description"
                                ],
                                "properties": {
                                    "schoolName": {
                                        "$id": "#/properties/academicExperiences/items/anyOf/0/properties/academicExperience/properties/schoolName",
                                        "type": "string"
                                    },
                                    "title": {
                                        "$id": "#/properties/academicExperiences/items/anyOf/0/properties/academicExperience/properties/title",
                                        "type": "string"
                                    },
                                    "startDate": {
                                        "$id": "#/properties/academicExperiences/items/anyOf/0/properties/academicExperience/properties/startDate",
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "endDate": {
                                        "$id": "#/properties/academicExperiences/items/anyOf/0/properties/academicExperience/properties/endDate",
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "description": {
                                        "$id": "#/properties/academicExperiences/items/anyOf/0/properties/academicExperience/properties/description",
                                        "type": "string"
                                    }
                                },
                                "additionalProperties": true
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        }
    },
    "additionalProperties": true
}
